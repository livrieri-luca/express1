
doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/styles/styles.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1.titolo-profili #{title}
   div.profile
     div.profile-image(style=`background: url('${person.imgSrc}') top center no-repeat; background-size: cover;`)
     div.profile-details
       h1.profile-name
         | #{person.firstname} #{person.lastname}
       p.profile-bio
         | #{person.bio}